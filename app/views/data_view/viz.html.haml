%p
%p= link_to 'Back', :back
= javascript_include_tag "http://d3js.org/d3.v3.min.js", charset: 'utf-8'
:javascript
  var dataset = #{raw @money.to_json};
  var w = 500;
  var h = 300;
  var svg = d3.select("body").append("svg").attr({width:w, heigth:h});
  //var dataset = [10,20,30,40,50];
  svg.selectAll("circle")
    .data(dataset)
    .enter()
    .append("circle")
    .attr({
      cx: function(d,i) { return 50 + (i * 100); },
      cy: h / 2,
      r:  function(d,i) { return i*10; },
      fill: "red"
    });
